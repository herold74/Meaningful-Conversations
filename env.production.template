# Production Environment Configuration
# Copy this to .env.production and fill in your actual values
# DO NOT commit .env.production to git!

# Version
VERSION=latest

# Container Registry Configuration
REGISTRY_URL=quay.xyz.de
REGISTRY_USER=username
REGISTRY_PASSWORD=changeme_registry_password_here

# Database Configuration (MariaDB)
DB_USER=mcuser
DB_PASSWORD=changeme_production_password_here
DB_ROOT_PASSWORD=changeme_production_root_password_here
DB_NAME=meaningful_conversations_production

# Application URLs
ENVIRONMENT_TYPE=production
FRONTEND_URL=https://mc-app.yourdomain.at

# API Keys and Secrets
API_KEY=your_gemini_api_key_here
JWT_SECRET=your_jwt_secret_production_here_min_32_chars

# Mailjet Configuration (for email)
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key
MAILJET_SENDER_EMAIL=register@yourdomain.at

# Admin Account
INITIAL_ADMIN_EMAIL=admin@yourdomain.at
INITIAL_ADMIN_PASSWORD=changeme_production_admin_password

# TTS Configuration (Piper Text-to-Speech)
TTS_ENABLED=true
TTS_SERVICE_URL=http://tts:8082
PIPER_VOICE_DIR=/models
PIPER_COMMAND=piper
TTS_DEFAULT_VOICE_DE_FEMALE=de_DE-mls-medium
TTS_DEFAULT_VOICE_DE_MALE=de_DE-thorsten-medium
TTS_DEFAULT_VOICE_EN_FEMALE=en_US-amy-medium
TTS_DEFAULT_VOICE_EN_MALE=en_US-ryan-medium

