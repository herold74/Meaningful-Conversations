# Staging Environment Configuration
# Copy this to .env.staging and fill in your actual values
# DO NOT commit .env.staging to git!

# Version
VERSION=latest

# Container Registry Configuration
REGISTRY_URL=quay.xyz.de
REGISTRY_USER=username
REGISTRY_PASSWORD=changeme_registry_password_here

# Database Configuration (MariaDB)
DB_USER=mcuser
DB_PASSWORD=changeme_staging_password_here
DB_ROOT_PASSWORD=changeme_staging_root_password_here
DB_NAME=meaningful_conversations_staging

# Application URLs
ENVIRONMENT_TYPE=staging
FRONTEND_URL=https://mc-beta.yourdomain.at

# API Keys and Secrets
API_KEY=your_gemini_api_key_here
JWT_SECRET=your_jwt_secret_staging_here_min_32_chars

# Mailjet Configuration (for email)
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key
MAILJET_SENDER_EMAIL=register@yourdomain.at

# Admin Account
INITIAL_ADMIN_EMAIL=admin@yourdomain.at
INITIAL_ADMIN_PASSWORD=changeme_staging_admin_password

