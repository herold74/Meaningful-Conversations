{
  "name": "meaningful-conversations-frontend",
  "version": "1.1.0",
  "description": "Frontend for the Meaningful Conversations application.",
  "scripts": {
    "build:js": "esbuild index.tsx --bundle --outfile=dist/bundle.js --format=esm --minify --sourcemap",
    "build:css": "tailwindcss -i ./index.css -o ./dist/index.css --minify",
    "build": "npm run build:js && npm run build:css"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.23.0",
    "typescript": "^5.5.3",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16"
  }
}
